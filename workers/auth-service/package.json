{
  "name": "auth-service",
  "version": "1.0.0",
  "description": "JWT-based authentication service for B2B platform (Firebase Auth replacement)",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "build": "echo 'No build step required for auth-service'",
    "type-check": "tsc --noEmit",
    "deploy": "wrangler deploy --config wrangler.toml",
    "deploy:dev": "wrangler deploy --config wrangler.toml --env dev",
    "deploy:prod": "wrangler deploy --config wrangler.toml --env prod",
    "cf-typegen": "wrangler types"
  },
  "dependencies": {
    "@b2b/db": "workspace:*",
    "bcryptjs": "^2.4.3",
    "hono": "^4.11.4",
    "jose": "^5.9.6",
    "nanoid": "^5.0.9"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/bcryptjs": "^2.4.6",
    "typescript": "^5.7.2",
    "wrangler": "^4.33.2"
  }
}
