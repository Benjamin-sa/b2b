{
  "name": "shopify-sync-service",
  "version": "1.0.0",
  "description": "Shopify stock synchronization service for B2B/B2C inventory management",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "build": "echo 'No build step required for shopify-sync-service'",
    "type-check": "tsc --noEmit",
    "deploy": "wrangler deploy --config wrangler.toml",
    "deploy:dev": "wrangler deploy --config wrangler.toml --env dev",
    "deploy:prod": "wrangler deploy --config wrangler.toml",
    "tail": "wrangler tail --config wrangler.toml",
    "tail:dev": "wrangler tail --config wrangler.toml --env dev"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "shopify",
    "inventory",
    "sync"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@b2b/db": "workspace:*",
    "drizzle-orm": "^0.44.3",
    "hono": "^4.11.4",
    "nanoid": "^5.0.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "wrangler": "^4.52.1"
  }
}
