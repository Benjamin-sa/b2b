{
  "name": "inventory-service",
  "version": "1.0.0",
  "description": "Cloudflare Worker for managing inventory allocation between B2B and B2C",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "build": "wrangler deploy --dry-run",
    "d1:create": "wrangler d1 create inventory-db",
    "d1:migrate": "wrangler d1 migrations apply inventory-db",
    "d1:local": "wrangler d1 execute inventory-db --local --file=./migrations/0001_initial.sql"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240909.0",
    "typescript": "^5.2.2",
    "wrangler": "^4.36.0"
  },
  "dependencies": {
    "hono": "^4.5.8"
  }
}
