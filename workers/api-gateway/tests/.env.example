# Environment variables for integration tests
# Copy this file to .env and fill in the actual values
# ⚠️ NEVER commit .env to git (already in .gitignore)

# ============================================================================
# API Gateway URLs
# ============================================================================

# Dev worker URL (default)
API_GATEWAY_DEV_URL=https://b2b-api-gateway-dev.benkee-sauter.workers.dev

# Local development (optional - for testing against local wrangler dev)
# API_GATEWAY_DEV_URL=http://localhost:8787

# ============================================================================
# Test Admin Credentials (REQUIRED)
# ============================================================================
# Create this user in dev database with:
# - role = 'admin'
# - is_verified = 1
# - is_active = 1
# - stripe_customer_id set (or use an admin that has one)

TEST_ADMIN_EMAIL=admin@test.local
TEST_ADMIN_PASSWORD=YourTestPassword123!

# ============================================================================
# Test User Credentials (Optional - for user-specific tests)
# ============================================================================
# Create this user in dev database with:
# - role = 'customer'
# - is_verified = 1 (for invoice tests)
# - stripe_customer_id set (for invoice tests)

TEST_USER_EMAIL=user@test.local
TEST_USER_PASSWORD=YourUserPassword123!

# ============================================================================
# Test Configuration
# ============================================================================

# Enable verbose logging from API client
TEST_VERBOSE=false

# Timeout for requests (ms)
# TEST_TIMEOUT=30000
