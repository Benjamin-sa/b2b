{
  "name": "api-gateway",
  "version": "1.0.0",
  "description": "API Gateway for B2B platform - Routes requests to microservices",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --config wrangler.toml",
    "deploy:dev": "wrangler deploy --config wrangler.toml --env dev",
    "deploy:prod": "wrangler deploy --env prod",
    "cf-typegen": "wrangler types",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "hono": "^4.6.14",
    "hono-rate-limiter": "^0.4.2",
    "jose": "^5.9.6"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.10.3",
    "@cloudflare/workers-types": "^4.20241127.0",
    "@vitest/ui": "^4.0.6",
    "typescript": "^5.7.2",
    "vitest": "^4.0.6",
    "wrangler": "^4.33.2"
  }
}
