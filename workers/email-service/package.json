{
  "name": "motordash-email-service",
  "version": "1.0.0",
  "description": "Email service worker for MotorDash B2B platform",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "build": "echo 'No build step required for email-service'",
    "type-check": "tsc --noEmit",
    "deploy": "wrangler deploy --config wrangler.toml",
    "deploy:dev": "wrangler deploy --config wrangler.toml --env dev",
    "deploy:prod": "wrangler deploy --config wrangler.toml",
    "test": "vitest"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240925.0",
    "typescript": "^5.0.0",
    "vitest": "^2.1.0",
    "wrangler": "^4.52.1"
  },
  "keywords": [
    "cloudflare-workers",
    "sendgrid",
    "email",
    "motordash"
  ],
  "author": "MotorDash Team",
  "license": "MIT"
}
