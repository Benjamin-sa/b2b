# Firebase
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain
VITE_FIREBASE_PROJECT_ID=your_firebase_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket
VITE_FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id
VITE_FIREBASE_APP_ID=your_firebase_app_id

# Stripe
VITE_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# Server-side Stripe (used by Cloud Functions / local emulator)
# IMPORTANT: Do NOT commit your secret key to source control. Keep these values
# in your deployment environment (Secret Manager / CI env) or a local
# `functions/.env` for emulator testing only.
# Example (used by functions/src/index.ts):
STRIPE_SECRET=sk_test_your_secret_key
STRIPE_API_VERSION=2023-10-16
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Security Settings
# Set to 'true' only when you need to create the first admin user
# IMPORTANT: Set this back to 'false' after creating the first admin!
VITE_ALLOW_FIRST_ADMIN=false

# Inventory Service (Cloudflare Worker)
VITE_INVENTORY_SERVICE_URL=https://your-inventory-worker.your-subdomain.workers.dev
