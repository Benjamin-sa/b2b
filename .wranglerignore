# Wrangler ignore file for Cloudflare Pages
# This tells Wrangler which files/directories to ignore during deployment

# Ignore Firebase Functions (they're not Cloudflare Functions)
functions/

# Ignore development files
node_modules/
.env*
.git/
.gitignore

# Ignore build artifacts that shouldn't be deployed
src/
*.ts
*.vue
vite.config.ts
tsconfig*.json
tailwind.config.js

# Ignore deployment scripts
deploy-*.sh
*.md
*.yaml
*.yml

# Ignore Firebase files
firebase.json
firestore.rules
.firebaserc

# Ignore other project files
package*.json
scripts/
